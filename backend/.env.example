# AI Provider Configuration
# Use Groq for free cloud AI (recommended)
GROQ_API_KEY=your_groq_api_key_here

# Groq Model Selection (choose one):
# - llama-3.1-8b-instant (FASTEST - recommended for quick responses)
# - mixtral-8x7b-32768 (FAST - good balance)
# - llama-3.3-70b-versatile (BEST - more capable but slower)
GROQ_MODEL=llama-3.1-8b-instant

# OpenAI (optional, paid)
OPENAI_API_KEY=your_openai_key_here

# Ollama (local development)
USE_OLLAMA=false
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1

# Database
DATABASE_URL=sqlite+aiosqlite:///./app.db

# Vector Database
VECTOR_DB=chroma
PINECONE_API_KEY=your_pinecone_key

# Authentication
SECRET_KEY=your-secret-key-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
